{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Configuration for Vibeman Refactor CI - Headless refactor analysis",
  "severity": "medium",
  "categories": [
    "performance",
    "maintainability",
    "security",
    "code-quality"
  ],
  "excludePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "provider": "gemini",
  "model": "gemini-flash-latest",
  "autoPR": false
}
