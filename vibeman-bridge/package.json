{
  "name": "vibeman-bridge",
  "displayName": "Vibeman Bridge",
  "description": "Bridge between Vibeman and VS Code Copilot models for agentic task execution",
  "version": "0.1.0",
  "publisher": "vibeman",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibeman-bridge.start",
        "title": "Vibeman Bridge: Start Server"
      },
      {
        "command": "vibeman-bridge.stop",
        "title": "Vibeman Bridge: Stop Server"
      }
    ],
    "configuration": {
      "title": "Vibeman Bridge",
      "properties": {
        "vibeman-bridge.port": {
          "type": "number",
          "default": 9876,
          "description": "Port for the bridge HTTP server"
        },
        "vibeman-bridge.maxIterations": {
          "type": "number",
          "default": 30,
          "description": "Maximum agentic loop iterations per task"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.5.0"
  }
}
